@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="@Configuration.Theme"/>
<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar>
                Dima
                <MudSpacer />
                <MudText>
                    @context.User.Identity?.Name
                </MudText>
                <MudSwitch @bind-Value="@_isDarkMode" />
            </MudAppBar>
            <MudMainContent>
                <MudContainer>
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <LoginRedirect />
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _isDarkMode = true;
}