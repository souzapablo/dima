@page "/registrar"
@layout HeadlessLayout

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-with-full pa-8">
            <div class="d-flex justify-center pb-8 pb-8">
                <img 
                    src="images/dima.png" 
                    alt="Dima - Controle financeiro" 
                    width="200px"
                />
            </div>

            <MudForm @ref="_mudForm">
                <MudTextField 
                    T="string" 
                    Label="E-mail"
                    InputType="InputType.Email"
                    Required=true
                    RequiredError="Informe o e-mail"
                    Validation="@(new EmailAddressAttribute { ErrorMessage = "E-mail inválido"})"/>
                
                <MudTextField 
                    T="string"
                    Label="Senha"
                    Required=true
                    RequiredError="Informe a senha"
                    InputType="InputType.Password"
                    />
            </MudForm> 

            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">Cadastrar</MudButton>
                <MudSpacer />
                <MudButton Href="/login" Variant="Variant.Outlined" Color="Color.Primary">Já tenho uma conta</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}